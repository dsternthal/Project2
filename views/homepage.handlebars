<div uk-filter="target: .js-filter">

    <ul class="uk-subnav uk-subnav-pill">
        <li class="uk-active" uk-filter-control><a href="#">All</a></li>
        <li uk-filter-control="[data-color='red']"><a href="#">Red</a></li>
        <li uk-filter-control="[data-color='orange']"><a href="#">Orange</a></li>
        <li uk-filter-control="[data-color='green']"><a href="#">Green</a></li>
    </ul>

    <ul class="js-filter uk-child-width-1-2 uk-child-width-1-3@m uk-text-center" uk-grid>

{{#each projects as |project| }}
        <li data-color="{{{get_color project.importance}}}" id="card">

            <div class="uk-card uk-card-default uk-card-body {{{get_color project.importance}}} "><a href="/project/{{project.id}}">{{project.name}}</a>
        
            <p>Created by {{project.user.name}} on {{format_date project.date_created}}</p>
            <p>
            {{project.description}}
            </p>
            <p class="submitDate">Due on {{format_date project.due_date}}</p>

            
            
            </div>


        </li>
        {{/each}}
    </ul>

</div>
